<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/showtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/viewstub_introduce"
        android:textColor="@color/rosybrown"
        android:textSize="@dimen/edit_font_size_small"
        android:typeface="serif" />

    <include
        android:id="@+id/subview_custom_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/custom_edittext" />
    
    <include
        android:id="@+id/subview_viewstub_include_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/viewstub_include_view" /><!-- bytim:viewstub_include_view使用merge -->

</LinearLayout>